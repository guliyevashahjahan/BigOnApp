@model IEnumerable<Color>

<div class="border-default universal-padding sidebar-widget mb-40">
    <div class="group-title">
        <h2>Color</h2>
    </div>
    <ul class="color-option">
        @foreach (var item in Model)
        {
            <li>
                <a class="filled" style="background-color:@item.HexCode" data-id="@item.Id" data-entity-type="colors"></a>
            </li>
        }
    </ul>
</div>